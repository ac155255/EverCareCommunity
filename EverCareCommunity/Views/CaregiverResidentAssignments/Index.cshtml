@model IEnumerable<EverCareCommunity.Models.CaregiverResidentAssignment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Caregiver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ElderlyResident)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Caregiver.QualificationType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ElderlyResident.FirstName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AssignmentID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AssignmentID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AssignmentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
