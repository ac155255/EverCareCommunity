<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EverCareCommunity</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EverCareCommunity.styles.css" asp-append-version="true" />

    <style>
        body {
            font-family: Arial, sans-serif;
        }

        /* Navbar Styling */
        .navbar {
            background-color: darkslategray; 
        }

            .navbar a {
                color: white !important;
                font-weight: bold;
            }

            .navbar .nav-item .nav-link:hover {
                color: black !important; 
            }

        /* Hero Section */
        .hero {
            background: url('https://wallpapercrafter.com/desktop4/1195782-people-elderly-grandma-old-People-old-Person-senior.jpg') center/cover no-repeat;
            color: gray;
            text-align: center;
            padding: 100px 20px;
        }

            .hero h1 {
                font-size: 3rem;
                font-weight: bold;
            }

            .hero .btn {
                padding: 10px 20px;
                font-size: 1.2rem;
                margin: 10px;
            }
    </style>
</head>
<body>

    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">EverCareCommunity</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Addresses" asp-action="Index">Address</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Appointments" asp-action="Index">Appointment</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Caregivers" asp-action="Index">Caregiver</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Doctors" asp-action="Index">Doctor</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="ElderlyResidents" asp-action="Index">Resident</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="EmergencyContacts" asp-action="Index">Contacts</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="MedicalConditions" asp-action="Index">MedicalCondition</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="MedicalRecords" asp-action="Index">MedicalRecord</a></li>
                    </ul>
                </div>
                <partial name="_LoginPartial.cshtml" />
            </div>
        </nav>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <h1>EVERCARE COMMUNITY</h1>
        <a asp-controller="ElderlyResidents" asp-action="Create" class="btn btn-primary">Join as a Resident</a>
        <a asp-controller="Caregivers" asp-action="Create" class="btn btn-primary">Apply as a Caregiver</a>
        <a asp-controller="Doctors" asp-action="Create" class="btn btn-primary">Register as a Doctor</a>

        
    </section>

    <!-- Page Content -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - EverCareCommunity - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>

