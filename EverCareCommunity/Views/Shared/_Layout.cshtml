<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EverCareCommunity</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EverCareCommunity.styles.css" asp-append-version="true" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Animate.css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <aside class="sidebar">
            <h2 class="sidebar-title">EverCareCommunity</h2>
            <ul class="sidebar-nav">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="ElderlyResidents" asp-action="Index">Resident</a></li>
                <li><a asp-controller="Doctors" asp-action="Index">Doctor</a></li>
                <li><a asp-controller="Caregivers" asp-action="Index">Caregiver</a></li>
                <li><a asp-controller="Addresses" asp-action="Index">Address</a></li>
                <li><a asp-controller="Appointments" asp-action="Index">Appointment</a></li>
                <li><a asp-controller="EmergencyContacts" asp-action="Index">Contacts</a></li>
                <li><a asp-controller="MedicalConditions" asp-action="Index">Medical Condition</a></li>
                <li><a asp-controller="MedicalRecords" asp-action="Index">Medical Record</a></li>
                <li><a asp-controller="Home" asp-action="Privacy">Privacy</a></li>
            </ul>
            <div class="login-partial">
                <partial name="_LoginPartial.cshtml" />
            </div>
        </aside>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Hero Section -->
            <section class="hero text-center mb-5">
                <h1>Welcome to EverCare Community</h1>
                <div class="btn-group mt-3">
                    <a asp-controller="ElderlyResidents" asp-action="Create" class="btn btn-warning text-dark">Join as a Resident</a>
                    <a asp-controller="Caregivers" asp-action="Create" class="btn btn-light">Apply as a Caregiver</a>
                    <a asp-controller="Doctors" asp-action="Create" class="btn btn-info text-white">Register as a Doctor</a>
                </div>
            </section>

            <!-- Page Body -->
            <main role="main" class="container pb-3">
                @RenderBody()
            </main>

            <!-- Footer -->
            <footer class="text-center mt-5">
                <hr />
                <p>&copy; 2025 - EverCareCommunity | <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a></p>
            </footer>
        </div>
    </div>

    <!-- Password Strength Script -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const passwordInput = document.querySelector("#Input_Password");
            const strengthBar = document.querySelector("#password-strength");

            passwordInput.addEventListener("input", function () {
                const val = passwordInput.value;
                let strength = 0;
                if (val.length > 7) strength++;
                if (/[A-Z]/.test(val)) strength++;
                if (/[a-z]/.test(val)) strength++;
                if (/[0-9]/.test(val)) strength++;
                if (/[\W]/.test(val)) strength++;

                strengthBar.className = "progress-bar";
                strengthBar.style.width = (strength * 20) + "%";
                strengthBar.classList.add(strength >= 4 ? "bg-success" : strength >= 3 ? "bg-warning" : "bg-danger");
            });
        });
    </script>


    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
